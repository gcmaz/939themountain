{% extends 'TheMountainMainBundle::layout.html.twig' %}

{% block styles %}
    {{ parent() }}
    <link type="text/css" rel="stylesheet" href="{{asset('scripts/nivo-slider/nivo-slider.css')}}"/>
{% endblock %}
    
{% block leftcol_fb %}{% endblock %}
    
{% block leftcol_ad %}
    <img src="{{asset('images/300x250/azcu-olympic-medal.jpg')}}" width="300" height="250" alt="Olympic Tracker sponsored by Arizona Central Credit Union" style="margin:5px auto;" usemap='#azcu'/>
    <map name='azcu' id='azcu'>
        <area shape='rect' coords='0,0,300,100' href='http://azcentralcu.pwlanding.com/022/' alt='Arizona Central Credit Union' target='_blank' onclick="ga('send', 'event', 'olympic_tracker', 'click-azcu', 'mountain');">
        <area shape='rect' coords='0,101,300,250' href='http://www.nbcolympics.com/medals' alt='Sochi Olympics Medal Tracker' target='_blank' onclick="ga('send', 'event', 'olympic_tracker', 'click-nbc', 'mountain');">
    </map>
{% endblock %}
    
{% block exp_leaderboard %}
    <div id="expleaderboard">
        <a href="http://www.arizonasnowbowl.com/" target="_blank" onclick="ga('send', 'event', 'expleaderboard', 'click', 'mountain');">
            <img src="{{ asset('images/660x150/snowbowl.jpg') }}" width="660" height="150" alt="Ski and Snowboard at Arizona Snowbowl" />
        </a>
    </div>
{% endblock %}
    
{% block content %}
    <div class="mainbox_box">
        <div class="slider_wrapper theme_default">
            <div id="slider" class="nivoSlider">
                <img src="{{ asset('images/660x250/default-2.jpg') }}" width="660" height="250" alt="We Play The Most Rock">
            </div>
        </div>
    </div>
    <div class="listener_box">
        <div id="lb1">
            <p>#Flagstaff</p>
            <iframe src="http://snapwidget.com/sl/?h=ZmxhZ3N0YWZmfGlufDEyNXwyfDN8fG5vfDV8bm9uZQ==" allowTransparency="true" frameborder="0" scrolling="no" style="border:none; overflow:hidden; width:130px; height: 130px" ></iframe>				
            <p>#Prescott</p>
            <iframe src="http://snapwidget.com/sl/?h=cHJlc2NvdHR8aW58MTI1fDJ8M3x8bm98NXxub25l" allowTransparency="true" frameborder="0" scrolling="no" style="border:none; overflow:hidden; width:130px; height: 130px" ></iframe>
        </div>
        <div id="lb3">
            {{ display_blockA|raw }}
            {{ display_blockB|raw }}
        </div>
        <div id="lb2">
            <div class="fb-like-box" data-href="http://www.facebook.com/TheNew939" data-width="340" data-height="305" data-show-faces="false" data-colorscheme="dark" data-stream="true" show-border="false" data-header="false" style="text-align: left;"></div>
        </div>
        <p style="clear:both;float:left;color:#666;font-size:10px;font-weight:700;margin-left:25px;">Instagram Photos</p>
        <p style="float:right;color:#666;font-size:10px;font-weight:700;margin-right:25px;">Instagram Photos</p>
        <br class="clear"/><br/><br/>
        <div class="box_320x150 box_left">
            <a href="{{ path('TheMountainMainBundle_onair') }}" >
                <img src="{{ asset('images/320x150/the-core.jpg') }}" width="320" height="150" alt="The Core with Meltdown"/>
            </a>
        </div>
        <div class="box_320x150 box_right">
            <a href="http://clubmountain.939themountain.com/asp3/lwcodes.aspx" target="_blank">
                <img src="{{ asset('images/320x150/rock-word.jpg') }}" width="320" height="150" alt="Play The Rock Word"/>
            </a>
        </div>
        <br class="clear"/>
    </div>
{% endblock %}
    
{% block js_btm %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('scripts/nivo-slider/jquery.nivo.slider.pack.js') }}"></script>
    <script type='text/javascript'>
    $(document).ready(function(){
        //nivo slider
        $(window).load(function() {
            $('#slider').nivoSlider({
                effect: 'boxRain',
                pauseTime: 5000,
                directionNav: false,
                pauseOnHover: false
            });
        });
     });
    </script>
{% endblock %}