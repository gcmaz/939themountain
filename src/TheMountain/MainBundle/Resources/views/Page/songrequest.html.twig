{% extends 'TheMountainMainBundle::layout.html.twig' %}

{% block title %}
    Song Requests - 93.9 The Mountain - Rock Radio - Northern Arizona
{% endblock %}

{% block description %}
    <meta name="description" content="Request Songs on The New 93.9 The Mountain - Rock Radio for Northern Arizona"/>
    <meta property="og:site_name" content="http://939themountain.gcmaz.com" />
    <meta property="fb:admins" content="100003228578475" />
    <meta property="fb:app_id" content="159639224186993" />
    <meta property="og:type" content="website" />   
    <meta property="og:image" content="http://939themountain.gcmaz.com{{ asset('/images/logo-939themountain.png') }}"/>
    <meta property="og:url" content="http://939themountain.gcmaz.com{{ path('TheMountainMainBundle_song_request') }}"/>
    <meta property="og:title" content="Request Songs on The New 93.9 The Mountain - Rock Radio for Northern Arizona"/> 
    <meta property="og:description" content="Request Songs on The New 93.9 The Mountain - Rock Radio for Northern Arizona"/>
{% endblock %}

{% block keywords %}
    <meta name="keywords" content="song requests, Arizona, rock radio"/>
{% endblock %}

{% block styles %}
    {{ parent() }}
    <style type="text/css">
        form.requestsform { font-size: 16px;color:#f6ad40; }
        form.requestsform div { clear: left; margin-bottom: 10px; }
        form.requestsform label { float: left; margin-right: 10px; text-align: right; width: 150px; font-weight: bold; vertical-align: top; padding-top: 10px; }
        form.requestsform input[type="text"],
        form.requestsform input[type="email"]
            { width: 400px; line-height: 26px; font-size: 20px; min-height: 26px; }
        form.requestsform select { width:400px; line-height: 26px; font-size: 20px; min-height: 26px; }
        form.requestsform textarea { width: 400px; height: 100px; line-height: 26px; font-size: 20px; }
        form.requestsform input[type="submit"] { margin-left: 160px; width: 408px; line-height: 26px; font-size: 20px; min-height: 26px; }
        form.requestsform ul li { color: #ff0000; margin-bottom: 5px; }
   </style>
{% endblock %}
    
{% block content %}
    <img src="{{ asset('images/song-requests.png') }}" alt="Request Songs on 93-9 The Mountain" width="600" height="100" class="centered"/>
    
    {% for flashMessage in app.session.flashbag.get('songnotice') %}
        <div class="notice">
            {{ flashMessage }}
        </div>
    {% endfor %}
   
    <div style="width:90%;text-align:left;">
        <form action="{{ path('TheMountainMainBundle_song_request') }}" method="post" {{ form_enctype(form) }} class="requestsform">
            {{ form_errors(form) }}

            {{ form_row(form.name) }}
            {{ form_row(form.email) }}
            {{ form_row(form.city) }}
            <div>
            {{ form_label(form.songrequest, 'Song Request') }}
            {{ form_errors(form.songrequest) }}            
            {{ form_widget(form.songrequest) }}
            </div>

            {{ form_rest(form) }}

            <input type="submit" value="Submit" />
        </form>
        <br/><br/>
       <div style="float:left;">
                <a href="http://www.buckyscasino.com/" target="_blank"><img src="{{ asset('images/sponsor_yavapai-gaming.png') }}" width="228" height="96" alt="Sponsored by Yavapai Gaming" /></a>
        </div>
        <div style="color:#fff;float:right;font-size:12px;font-weight:bold;text-align:left;margin-right:50px;">
	<p style="color:#ffcc00;">Other ways to submit your requests ....</p>

            	<p style="font-size:18px;line-height:1.4;border-bottom:1px solid #999;">
                    Fax <span style="color:#fff;">928-779-2988</span>
            	</p>
            	<p style="font-size:18px;line-height:1.4;border-bottom:1px solid #999;">
                    Post On <a href="http://www.facebook.com/939TheMountain" target="_blank"><img src="{{ asset('images/facebook.png') }}" width="104" height="29" alt="Facebook" style="margin:0;"/></a>
            	</p>
	<p style="font-size:18px;line-height:1.4;border-bottom:1px solid #999;">
                    Mail <span style="font-size:11px;">1117 W. Rte 66, Flagstaff, AZ 86001</span>
                </p>                
         </div>
        <br class="clear"/>
        <div class="fb-like" data-href="http://939themountain.gcmaz.com{{ path('TheMountainMainBundle_song_request') }}" data-send="true" data-width="450" data-show-faces="true" data-font="arial"></div>
        <br class="clear"/><br/>
    </div>
{% endblock %}