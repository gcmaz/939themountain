{% extends 'TheMountainMainBundle::layout.html.twig' %}

{% block title %}
    On Air Talent and Programming - Northern Arizona Rock Radio - 93-9 The New Mountain
{% endblock %}
    
{% block description %}
    <meta name="description" content="On Air Talent and Programming - Northern Arizona Rock Radio - 93-9 The New Mountain"/>
    <meta property="og:site_name" content="http://939themountain.gcmaz.com" />
    <meta property="fb:admins" content="100003228578475" />
    <meta property="fb:app_id" content="159639224186993" />
    <meta property="og:type" content="music.radio_station" />
    <meta property="og:image" content="http://939themountain.gcmaz.com{{ asset('/images/logo-939themountain.png') }}"/>
    <meta property="og:url" content="http://939themountain.gcmaz.com{{ path('TheMountainMainBundle_onair') }}"/>
    <meta property="og:title" content="On Air Talent and Programming - Northern Arizona Rock Radio - 93-9 The New Mountain"/> 
    <meta property="og:description" content="On Air Talent and Programming - Northern Arizona Rock Radio - 93-9 The New Mountain"/>
